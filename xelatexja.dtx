                    {
                      \@@_vrule:nnn
                        { \c_zero_dim }
                        { 0.5\l_tmpa_dim }
                        { 0.5\l_tmpa_dim }
                    }
                    { r }
                    {
                      \@@_vrule:nnn
                        { \c_zero_dim }
                        { 0.5\l_xltj_zw_dim }
                        { \l_tmpa_dim - 0.5\l_xltj_zw_dim }
                    }
                    { l }
                    {
                      \@@_vrule:nnn
                        { \c_zero_dim }
                        { \l_tmpa_dim - 0.5\l_xltj_zw_dim }
                        { 0.5\l_xltj_zw_dim }
                    }
                  }
              }
            \xltj_box_tjabaselineshift:n
              { \box_use_drop:N \l_tmpa_box }
